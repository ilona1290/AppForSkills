@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <div class="welcome">
            Cześć, <a class="link" href="/users/@context.User.Identity.Name">@context.User.Identity.Name!</a>
        </div>
        <button class="btn btn-success" @onclick="BeginSignOut">Wyloguj</button>
    </Authorized>
    <NotAuthorized>
        <a href="authentication/login" class="btn btn-primary">Zaloguj</a> 
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }

}
