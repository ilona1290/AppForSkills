@using AppForSkills.Client.Models
@inject HttpClient Http


@foreach (var like in likes)
{
    <a style="text-decoration: none" href="users/@like.Username">
        <MudCard Style="width:200px;">
            <MudCardHeader>
                @if (like.Avatar == "")
                {
                    <MudAvatar Color="Color.Error">@like.Username.Substring(0, 1).ToUpper()</MudAvatar>
                }
                else
                {
                    <MudAvatar Image="@like.Avatar" />
                }
                <MudText Style="margin-left: 12px;">@like.Username</MudText>
            </MudCardHeader>
        </MudCard>
    </a>
    <br />
}

@code {
    [Parameter]
    public List<LikeDto> likes { get; set; } = new List<LikeDto>();
}
