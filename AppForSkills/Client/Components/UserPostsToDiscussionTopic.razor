@using AppForSkills.Client.Models
@inject IModalService modal

@foreach (var post in Posts)
{
    <h4 class="topic">@post.Topic</h4>
    <div class="posts">
        <a href="/discussions/@post.DiscussionId" class="linkLike">
            <div class="datePost">@post.Date</div><br />
            <div>@post.PostText</div>
        </a>
        <div>&#10084;&#65039; <button @onclick="@(()=>modal.Show<Likes>(" Polubienia", GetParameters(post)))" class="linkLike">@post.Likes.Count</button></div>
    </div>
    <br />
}

@code {
    [Parameter]
    public List<UserDiscussionPostDto> Posts { get; set; } = new List<UserDiscussionPostDto>();
    private ModalParameters modalParameters { get; set; } = new ModalParameters();

    private ModalParameters GetParameters(UserDiscussionPostDto post)
    {
        modalParameters.Add("likes", post.Likes);
        return modalParameters;
    }
}
