@using AppForSkills.Client.Components
@inject NavigationManager NavigationManager
@page "/"

<AuthorizeView>
    <Authorized>
        @if (true)
        {
            NavigateToMainPage();
        }
    </Authorized>
    <NotAuthorized>
        @if(true)
        {
            NavigateToStartPage();
        }
    </NotAuthorized>
</AuthorizeView>

@code{
    private void NavigateToStartPage()
    {
        NavigationManager.NavigateTo("/start");
    }

    private void NavigateToMainPage()
    {
        NavigationManager.NavigateTo("/skillPosts");
    }
}

